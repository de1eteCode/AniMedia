@using AniMedia.WebClient.UIWeb.UserPanel.Shared
@layout UserUILayout
@attribute [Route(PageUrlConstants.LoginPageUrl)]

<h3>Login</h3>

@{
    /// https://mdbootstrap.com/docs/standard/extended/login/
}

<div class="col-6 justify-content-center">
    <form class="align-content-center">
        @{
            /// Nickname input
        }

        <div class="form-outline mb-4">
            <input type="text" id="formNicknameInput" class="form-control" @bind="VModel.Nickname"/>
            <label class="form-label" for="formNicknameInput">Nickname</label>
        </div>

        @{
            /// Password input
        }
        <div class="form-outline mb-4">
            <input type="password" id="formPasswordInput" class="form-control" @bind="VModel.Password"/>
            <label class="form-label" for="formPasswordInput">Password</label>
        </div>

        @{
            /// 2 column grid layout for inline styling
        }
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                @{
                    /// Checkbox
                }
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="formRememberMeInput"/>
                    <label class="form-check-label" for="formRememberMeInput"> Remember me </label>
                </div>
            </div>

            <div class="col">
                @{
                    /// Simple link
                }
                <a href="#!">Forgot password?</a>
            </div>
        </div>
        @{
            /// Submit button
        }
        <button type="button" class="btn btn-primary btn-block mb-4" @onclick="UserLogin">Sign in</button>
    </form>
</div>