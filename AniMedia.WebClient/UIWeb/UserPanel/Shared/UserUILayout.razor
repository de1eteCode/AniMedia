@inherits LayoutComponentBase
@layout MainLayout

<Layout>
    <LayoutHeader class="container">
        <Bar
            Breakpoint="Breakpoint.Desktop"
            Background="Background.Light"
            ThemeContrast="ThemeContrast.Light">

            <BarMenu>
                <BarItem>
                    <Buttons Role="ButtonsRole.Toolbar">
                        <Buttons Margin="Margin.Is2.FromEnd">
                            <Button Color="Color.Secondary" Type="ButtonType.Link" To="@PageUrlConstants.IndexPageUrl">Home</Button>
                            <Button Color="Color.Secondary" Type="ButtonType.Link" To="@PageUrlConstants.CounterPageUrl">Counter</Button>
                        </Buttons>
                    </Buttons>
                </BarItem>
                <BarEnd>
                    <AniMedia.WebClient.UIWeb.Shared.Auth.Components.LoginDisplayComponent/>
                </BarEnd>
            </BarMenu>
        </Bar>
    </LayoutHeader>

    <LayoutContent class="container px-4">
        @Body
    </LayoutContent>

    <LayoutFooter class="mt-auto container px-4">
        <Span>Dev AniMedia 2023</Span>
    </LayoutFooter>
</Layout>