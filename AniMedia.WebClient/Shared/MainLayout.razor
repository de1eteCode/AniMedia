@using Blazored.Toast.Configuration
@inherits LayoutComponentBase

<BlazoredToasts
    Position="ToastPosition.BottomRight"
    Timeout="5"
    RemoveToastsOnNavigation="true"
    MaxToastCount="5"
    ShowProgressBar="true"
    IconType="IconType.FontAwesome"
    SuccessClass="success-toast-override"
    ErrorIcon="fa fa-bug"
    SuccessIcon="fa fa-thumbs-up"/>

<header class="container">
    <Bar
        Breakpoint="Breakpoint.Desktop"
        Background="Background.Light"
        ThemeContrast="ThemeContrast.Light">

        <BarMenu>
            <BarItem>
                <Buttons Role="ButtonsRole.Toolbar">
                    <Buttons Margin="Margin.Is2.FromEnd">
                        <Button Color="Color.Secondary" Type="ButtonType.Link" To="/">Home</Button>
                        <Button Color="Color.Secondary" Type="ButtonType.Link" To="/counter">Counter</Button>
                        <Button Color="Color.Secondary" Type="ButtonType.Link" To="/swagger">Swagger</Button>
                    </Buttons>
                </Buttons>
            </BarItem>
            <BarEnd>
                <AniMedia.WebClient.Shared.Auth.LoginDisplayComponent/>
            </BarEnd>
        </BarMenu>
    </Bar>
</header>

<main class="container px-4">
    @Body
</main>

<footer class="mt-auto container px-4">
    <div class="container">
        <span>Dev AniMedia 2023</span>
    </div>
</footer>