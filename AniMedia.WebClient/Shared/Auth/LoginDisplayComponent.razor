<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <a href="#">Hello, @context.User.Identity?.Name</a>
            <AniMedia.WebClient.Shared.Auth.LogoutComponent GetReturnUrl="@GetCurrentUrl" />
        </Authorized>
        <NotAuthorized>
            <NavLink class="nav-link" href="account/register">
                Register
            </NavLink>
            <NavLink class="nav-link" href="account/login">
                Login
            </NavLink>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>