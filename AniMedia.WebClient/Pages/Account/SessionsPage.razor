@if (_sessions == null) {
    <p>
        <em>Loading...</em>
    </p>
}
else {
    <table class="table">
        <thead>
        <tr>
            <th>UID</th>
            <th>Date at create</th>
            <th>User agent</th>
            <th>IP</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var session in _sessions) {
            <tr>
                <td>@session.Uid.ToString("N")</td>
                <td>@session.CreateAt.ToShortDateString()</td>
                <td>@session.UserAgent</td>
                <td>@session.Ip</td>

                @if (session.Uid.Equals(_currentSession?.Uid ?? Guid.Empty) == false) {
                    <td>
                        <button type="button" class="btn-close" aria-label="Close" @onclick='() => CloseSession(session.Uid)'></button>
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>
}

@if (string.IsNullOrEmpty(_errorMessage) == false) {
    <p>@_errorMessage</p>
}